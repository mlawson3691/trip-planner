{%  include 'inc/head-tag.html.twig' %}
{%  include 'inc/navbar.html.twig' %}
<html>
<body>
    <div class='container'>
        {% if alert == 'login' %}
            <div class="alert alert-danger text-center">
                <p><strong>Error!</strong> That username and/or password is not correct. Please try again.</p>
            </div>
        {% endif %}
        <form class='sign-up-form' action="/login" method="post">
            <h1>Log in now!</h1>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Username" name="username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn btn-info">Log in</button>
            <br><br>
            <p>Not a Member? <a href='/sign_up'>Sign Up!</a></p>
        </form>
    </div>
    {% include 'inc/footer.html' %}
</body>
</html>
